<h4 class="header">New Hook</h4>
<form class="form-horizontal">
  <fieldset>

  <div class="form-group">
    <div class="col-md-6">
      {{google-map
        lat=mapCenter.lat lng=mapCenter.lng markers=markers
        zoom=16 gopt_zoomControl=false gopt_draggable=false
        type='map'}}
    </div>
  </div>

  <!-- phone number -->
  {{!-- <div class="form-group">
    <label class="col-md-4 control-label" for="input-phone-number">Phone number</label>
    <div class="col-md-6">
      {{input value=phoneNumber
        id="input-phone-number" name="input-phone-number" type="text" placeholder=""
        class="form-control input-md"}}
    </div>
  </div> --}}

  <!-- Textarea -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="input-status">What on your minds?</label>
    <div class="col-md-6">
      {{textarea value=content class="form-control" id="input-status" name="input-status"}}
    </div>
  </div>

  <h5>*for the safety of you, the article appears only within a radius of 2km.</h5>

  <!-- Button (Double) -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="btn-publish"></label>
    <div class="col-md-8 pull-right">
      {{!-- {{link-to 'Cancel' 'feed' class="btn btn-default"}} --}}
      <a href="javascript:;" class="btn btn-default" {{action 'cancel'}}>Cancel</a>
      <button id="btn-publish" name="btn-publish"
        class="btn btn-success" {{action 'create'}}>New hook</button>

      {{!-- {{#spin-button action='create' inFlightBinding='inFlight'
        buttonStyle='zoom-in' class='btn btn-success'}}Want a Hook{{/spin-button}} --}}
    </div>
  </div>
  </fieldset>
</form>

{{outlet}}
