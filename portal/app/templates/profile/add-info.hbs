<h4 class="header">Add required information</h4>

<form class="form-horizontal">
  <fieldset>

  <!-- Password input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="label-email">Email</label>
    <div class="col-md-6">
      {{input value=model.email
        id="label-email" name="label-email"
        placeholder="" class="form-control input-md" required=""}}
    </div>
  </div>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="label-phone-number">Phone Number</label>
    <div class="col-md-6">
      {{input value=model.phoneNumber
        id="label-phone-number" name="label-phone-number" type="text" placeholder=""
        class="form-control input-md" required=""}}
    </div>
  </div>

  <!-- Password input-->
  {{!-- <div class="form-group">
    <label class="col-md-4 control-label" for="label-skype">Skype</label>
    <div class="col-md-6">
      {{input value=model.skype
        id="label-skype" name="label-skype"
        placeholder="" class="form-control input-md" required=""}}
    </div>
  </div> --}}

  <!-- Button (Double) -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="btn-login"></label>
    <div class="col-md-8 pull-right">
      <button id="btn-login" name="btn-login" class="btn btn-success"
        {{action 'publish'}}>Publish</button>
    </div>
  </div>

  </fieldset>
</form>

